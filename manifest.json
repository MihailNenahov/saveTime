{
  "manifest_version": 3,
  "name": "Porsche Redirect",
  "version": "0.1.0",
  "description": "Redirects blocked URL patterns to a Porsche image.",
  "permissions": ["declarativeNetRequest", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Porsche Redirect"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["redirect.html", "porsche.png"],
      "matches": ["<all_urls>"]
    }
  ]
}


